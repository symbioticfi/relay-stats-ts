{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "NodeNext"
    },
    "include": ["./*.ts"],
    "exclude": ["node_modules", "dist"]
  }